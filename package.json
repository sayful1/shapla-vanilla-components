{
  "version": "0.4.0",
  "name": "@shapla/vanilla-components",
  "description": "A collection of reusable vanilla javaScript components.",
  "contributors": [
    {
      "name": "Sayful Islam",
      "email": "sayful.islam001@gmail.com",
      "url": "https://sayfulislam.com"
    }
  ],
  "keywords": [
    "spinner",
    "notification",
    "confirm",
    "alert"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayful1/shapla-vanilla-components.git"
  },
  "bugs": {
    "url": "https://github.com/sayful1/shapla-vanilla-components/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.umd.js",
      "require": "./dist/index.umd.js",
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/*",
    "src/*",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build:dts": "tsc --declaration --emitDeclarationOnly --declarationDir dist",
    "build": "vite build && npm run build:dts"
  },
  "devDependencies": {
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.6"
  },
  "dependencies": {
    "shapla-css": "2.6.3"
  }
}
